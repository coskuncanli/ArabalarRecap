@model Recap.Models.Araba
@{
    ViewData["title"] = "Arabalar";
    List<Araba> arabalar = ViewBag.arabalar as List<Araba>;
}

<div class="row justify-content-center">
    <div class="col-8">

        <form action="/Home/ArabaEkle" method="post">
            <div class="row mb-5">
                <div class="col-1"><label asp-for="Marka" class="form-label">Markası</label></div>
                <div class="col-4"><input asp-for="Marka" class="form-control" autofocus required autocomplete="off" /></div>
                <div class="col-1"><label asp-for="Model" class="form-label">Modeli</label></div>
                <div class="col-4"><input asp-for="Model" class="form-control" autofocus required autocomplete="off" /></div>
                <div class="col-2"><button type="submit" class="btn btn-primary">ekle</button></div>
            </div>
        </form>
        <h1 class="h3">Arabalar</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marka</th>
                    <th>Model</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in arabalar){
                    <tr>
                        <td>@item.ArabaId</td>
                        <td>@item.Marka</td>
                        <td>@item.Model</td>
                        <td>
                            <a class="btn btn-warning" href="/Home/ArabaDuzenle/@item.ArabaId">Düzenle</a>
                            <a class="btn btn-danger" href="/Home/ArabaSil/@item.ArabaId" onclick="return confirm('emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>




    </div>
</div>